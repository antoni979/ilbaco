{% comment %}
  Stilaro Virtual Try-On Button Block
  Este bloque permite a los clientes probar prendas virtualmente
{% endcomment %}

<div class="stilaro-vton-container" style="margin: {{ block.settings.margin_top }}px 0 {{ block.settings.margin_bottom }}px 0;">
  <button
    class="stilaro-vton-button"
    data-product-id="{{ product.id }}"
    data-product-title="{{ product.title | escape }}"
    data-product-image="{{ product.featured_image | image_url: width: 800 }}"
    data-product-price="{{ product.price | money }}"
    style="
      background-color: {{ block.settings.button_bg_color }};
      color: {{ block.settings.button_text_color }};
      padding: {{ block.settings.button_padding }}px {{ block.settings.button_padding | times: 2 }}px;
      border-radius: {{ block.settings.border_radius }}px;
      border: none;
      font-size: {{ block.settings.font_size }}px;
      font-weight: 600;
      cursor: pointer;
      width: {% if block.settings.full_width %}100%{% else %}auto{% endif %};
      transition: opacity 0.2s ease;
    "
    onmouseover="this.style.opacity='0.85'"
    onmouseout="this.style.opacity='1'"
  >
    {{ block.settings.button_text }}
  </button>
</div>

<!-- Modal del Probador Virtual -->
<div id="stilaro-vton-modal" class="stilaro-vton-modal" style="display: none;">
  <div class="stilaro-vton-modal-overlay"></div>
  <div class="stilaro-vton-modal-content">
    <button class="stilaro-vton-close">&times;</button>

    <div class="stilaro-vton-header">
      <h2>{{ block.settings.modal_title }}</h2>
      <p>{{ block.settings.modal_subtitle }}</p>
    </div>

    <div class="stilaro-vton-body">
      <!-- Paso 1: Subir foto -->
      <div class="stilaro-vton-step" id="stilaro-step-upload">
        <div class="stilaro-vton-product-preview">
          <img id="stilaro-product-image" src="" alt="Producto" width="60" height="60">
          <span id="stilaro-product-title"></span>
        </div>

        <div class="stilaro-vton-upload-area" id="stilaro-upload-area">
          <input type="file" id="stilaro-photo-input" accept="image/*" style="display: none;">
          <div class="stilaro-vton-upload-content">
            <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/>
              <polyline points="17 8 12 3 7 8"/>
              <line x1="12" y1="3" x2="12" y2="15"/>
            </svg>
            <p>Sube tu foto o arrastra aquí</p>
            <span>JPG, PNG (max 5MB)</span>
          </div>
        </div>

        <img id="stilaro-user-preview" src="" alt="Tu foto" width="300" height="400" style="display: none;">

        <button id="stilaro-try-on-btn" class="stilaro-vton-primary-btn" style="display: none;">
          Probar prenda
        </button>
      </div>

      <!-- Paso 2: Resultado -->
      <div class="stilaro-vton-step" id="stilaro-step-result" style="display: none;">
        <div class="stilaro-vton-result">
          <img id="stilaro-result-image" src="" alt="Resultado" width="400" height="500">
        </div>
        <div class="stilaro-vton-actions">
          <button id="stilaro-download-btn" class="stilaro-vton-secondary-btn">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="vertical-align: middle; margin-right: 4px;">
              <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/>
              <polyline points="7 10 12 15 17 10"/>
              <line x1="12" y1="15" x2="12" y2="3"/>
            </svg>
            Descargar
          </button>
          <button id="stilaro-retry-btn" class="stilaro-vton-secondary-btn">Otra foto</button>
          <button id="stilaro-add-cart-btn" class="stilaro-vton-primary-btn">Añadir al carrito</button>
        </div>
      </div>

      <!-- Loading -->
      <div class="stilaro-vton-step" id="stilaro-step-loading" style="display: none;">
        <div class="stilaro-vton-spinner"></div>
        <p>Generando tu prueba virtual...</p>
        <div class="stilaro-progress-bar">
          <div class="stilaro-progress-fill" id="stilaro-progress-fill"></div>
        </div>
        <p class="stilaro-progress-text" id="stilaro-progress-text">0%</p>
      </div>
    </div>
  </div>
</div>

<style>
  .stilaro-vton-modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 9999;
  }

  .stilaro-vton-modal-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.7);
  }

  .stilaro-vton-modal-content {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background: white;
    border-radius: 16px;
    width: 90%;
    max-width: 500px;
    max-height: 90vh;
    overflow-y: auto;
    padding: 24px;
  }

  .stilaro-vton-close {
    position: absolute;
    top: 12px;
    right: 12px;
    background: none;
    border: none;
    font-size: 28px;
    cursor: pointer;
    color: #666;
  }

  .stilaro-vton-header {
    text-align: center;
    margin-bottom: 20px;
  }

  .stilaro-vton-header h2 {
    margin: 0 0 8px 0;
    font-size: 22px;
  }

  .stilaro-vton-header p {
    margin: 0;
    color: #666;
    font-size: 14px;
  }

  .stilaro-vton-product-preview {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 12px;
    background: #f5f5f5;
    border-radius: 8px;
    margin-bottom: 16px;
  }

  .stilaro-vton-product-preview img {
    width: 60px;
    height: 60px;
    object-fit: cover;
    border-radius: 8px;
  }

  .stilaro-vton-upload-area {
    border: 2px dashed #ccc;
    border-radius: 12px;
    padding: 40px 20px;
    text-align: center;
    cursor: pointer;
    transition: border-color 0.2s;
  }

  .stilaro-vton-upload-area:hover {
    border-color: {{ block.settings.button_bg_color }};
  }

  .stilaro-vton-upload-content svg {
    color: #999;
    margin-bottom: 12px;
  }

  .stilaro-vton-upload-content p {
    margin: 0 0 4px 0;
    font-weight: 500;
  }

  .stilaro-vton-upload-content span {
    color: #999;
    font-size: 12px;
  }

  #stilaro-user-preview {
    width: 100%;
    max-height: 300px;
    object-fit: contain;
    border-radius: 8px;
    margin-bottom: 16px;
  }

  .stilaro-vton-primary-btn {
    width: 100%;
    padding: 14px;
    background: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    border: none;
    border-radius: 8px;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
  }

  .stilaro-vton-secondary-btn {
    padding: 14px;
    background: #f5f5f5;
    color: #333;
    border: none;
    border-radius: 8px;
    font-size: 14px;
    cursor: pointer;
  }

  .stilaro-vton-result img {
    width: 100%;
    border-radius: 8px;
    margin-bottom: 16px;
  }

  .stilaro-vton-actions {
    display: flex;
    gap: 12px;
  }

  .stilaro-vton-actions .stilaro-vton-primary-btn {
    flex: 1;
  }

  .stilaro-vton-spinner {
    width: 48px;
    height: 48px;
    border: 4px solid #f3f3f3;
    border-top: 4px solid {{ block.settings.button_bg_color }};
    border-radius: 50%;
    animation: stilaro-spin 1s linear infinite;
    margin: 40px auto;
  }

  @keyframes stilaro-spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }

  #stilaro-step-loading {
    text-align: center;
    padding: 40px 0;
  }

  #stilaro-step-loading p {
    color: #666;
    margin-top: 16px;
  }

  .stilaro-progress-bar {
    width: 100%;
    height: 8px;
    background: #f0f0f0;
    border-radius: 4px;
    overflow: hidden;
    margin: 24px 0 8px 0;
  }

  .stilaro-progress-fill {
    height: 100%;
    background: linear-gradient(90deg, {{ block.settings.button_bg_color }} 0%, {{ block.settings.button_bg_color }}dd 100%);
    width: 0%;
    transition: width 0.3s ease;
    border-radius: 4px;
  }

  .stilaro-progress-text {
    font-size: 14px;
    font-weight: 600;
    color: {{ block.settings.button_bg_color }};
  }

  .stilaro-vton-actions {
    display: grid;
    grid-template-columns: auto auto 1fr;
    gap: 8px;
  }

  .stilaro-vton-actions .stilaro-vton-primary-btn {
    grid-column: 3;
  }
</style>

<script src="{{ 'vton-modal.js' | asset_url }}" defer></script>

{% schema %}
{
  "name": "Probador Virtual",
  "target": "section",
  "enabled_on": {
    "templates": ["product"]
  },
  "settings": [
    {
      "type": "header",
      "content": "Botón"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Texto del botón",
      "default": "Probar virtualmente"
    },
    {
      "type": "color",
      "id": "button_bg_color",
      "label": "Color de fondo",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Color del texto",
      "default": "#FFFFFF"
    },
    {
      "type": "range",
      "id": "button_padding",
      "label": "Padding",
      "min": 8,
      "max": 24,
      "step": 2,
      "default": 14,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "border_radius",
      "label": "Bordes redondeados",
      "min": 0,
      "max": 30,
      "step": 2,
      "default": 8,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "font_size",
      "label": "Tamaño de fuente",
      "min": 12,
      "max": 20,
      "step": 1,
      "default": 14,
      "unit": "px"
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Ancho completo",
      "default": true
    },
    {
      "type": "header",
      "content": "Espaciado"
    },
    {
      "type": "range",
      "id": "margin_top",
      "label": "Margen superior",
      "min": 0,
      "max": 40,
      "step": 4,
      "default": 16,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "label": "Margen inferior",
      "min": 0,
      "max": 40,
      "step": 4,
      "default": 16,
      "unit": "px"
    },
    {
      "type": "header",
      "content": "Modal"
    },
    {
      "type": "text",
      "id": "modal_title",
      "label": "Título del modal",
      "default": "Probador Virtual"
    },
    {
      "type": "text",
      "id": "modal_subtitle",
      "label": "Subtítulo",
      "default": "Sube una foto tuya para ver cómo te queda"
    }
  ]
}
{% endschema %}
